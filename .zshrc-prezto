## Locale
export LC_ALL=en_US.UTF-8

# Prezto init
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

## Compinstall
zstyle :compinstall filename '/Users/cristian/.zshrc'
autoload -Uz compinit
compinit

## History
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=10000
setopt beep
setopt inc_append_history
setopt share_history
autoload colors && colors

## ENV variables
export EDITOR=vim

## Rbenv configuration
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

## Nodenv configuration
export PATH="$HOME/.nodenv/bin:$PATH"
eval "$(nodenv init -)"

## Jenv configuration
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

## Java version
export JAVA_OPTIONS="-Xmx2048m"
export JAVA_OPTS="-Xmx2048m"

## Aliases
alias ll="ls -l -A"
alias postgres_config="docker run --name postgress -p 5432:5432 -v "/Users/$(whoami)/code/data:/var/lib/postgresql/data" -e POSTGRES_PASSWORD=password postgres:11.7"
alias gst="git status"
alias ga="git add"
